<h1 class="new-movie-hdr">Add Movie</h1>
<%= form_for @movie do |f| %>
<% if @movie.errors.any? %>
<div>
  <%= pluralize(@movie.errors.count, "error") %> prevented this movie from being submitted:
  <ul>
    <% @movie.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div class="col-sm-6">
  <div class="form-style">
    <div class="new-font-style">
      <%= f.label "title" %><br>
      <%= f.text_field "title" %>
    </div>
    <div class="new-font-style" id="new-release-date">
      <%= f.label "release_date" %><br>
      <%= f.date_field "release_date" %>
    </div>
    <div class="new-font-style" id="new-director">
      <%= f.label "director" %><br>
      <%= f.text_field "director" %>
    </div>
    <div class="new-font-style" id="new-runtime">
      <%= f.label "runtime_in_minutes" %><br>
      <%= f.number_field "runtime_in_minutes" %>
    </div>
    <div class="new-movie-choose-file"> 
      <%= f.file_field :image %>
    </div>
    <!-- <div class="new-font-style" id="new-poster-image">
      <%#= f.label "poster_image_url" %><br>
      <%#= f.text_field "poster_image_url" %>
    </div> -->
  </div>
</div>
<div class="col-sm-6">
  <div class="form-style">
    <div class="new-font-style">
      <%= f.label "description" %><br>
      <%= f.text_area "description" %>
    </div>
    <div class="new-font-style">
      <%= f.submit "Submit", class: "btn btn-primary", id: "new-submit" %> 
    </div>
  </div>
</div>
<% end %>